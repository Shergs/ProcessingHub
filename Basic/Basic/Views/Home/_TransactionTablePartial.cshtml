@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;
@model TransactionTableViewModel

<table class="table table-bordered table-hover rounded">
    <thead class="bg-light">
        <tr>
            <th scope="col">Id</th>
            <th class="col">Amount</th>
            <th class="col">Type</th>
            <!-- Add more columns headers as necessary -->
        </tr>
    </thead>
    <tbody>
        @if (Model.Transactions != null)
        {
            @foreach (var transaction in Model.Transactions)
            {
                <tr>
                    <td>@transaction.Id</td>
                    <td>@transaction.Amount</td>
                    <td>@transaction.Type</td>
                    <!-- Display other properties of the transaction as required -->
                </tr>
            }
        }
    </tbody>
</table>

<!-- Pagination controls -->
<div>
    @Html.PagedListPager(Model.Transactions, page => Url.Action("PageTransactions", new { page, Model.MerchantId }),
    new PagedListRenderOptions {
        LiElementClasses = new string[] { "page-item" },
        PageClasses = new string[] { "page-link" }
    })
</div>
