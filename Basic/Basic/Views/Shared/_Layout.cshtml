<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Basic</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Basic.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Kumbh+Sans:wght@400;700&family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        @{
            var currentPage = Context.Request.Path.Value?.ToLower() ?? string.Empty;
        }
        @if (!currentPage.StartsWith("/identity/account/login") && !currentPage.StartsWith("/identity/account/register"))
        {
            <nav class="tw-bg-gray-100 tw-border-gray-200 tw-dark:bg-gray-900">
                <div class="tw-w-full tw-flex tw-flex-wrap tw-items-center tw-justify-between tw-mx-auto tw-p-4">
                <a class="tw-flex tw-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://flowbite.com/docs/images/logo.svg" class="tw-h-8 tw-mr-3" alt="Flowbite Logo" />
                    <span class="tw-self-center tw-text-2xl tw-font-semibold tw-whitespace-nowrap">Processing</span>
                </a>
                <button id="test-btn" data-collapse-toggle="navbar-default" type="button" class="md:tw-hidden tw-inline-flex tw-items-center tw-p-2 tw-w-10 tw-h-10 tw-justify-center tw-text-sm tw-text-gray-500 tw-rounded-lg md:tw-hidden hover:tw-bg-gray-100 focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-gray-200" aria-controls="navbar-default" aria-expanded="false">
                    <span class="tw-sr-only">Open main menu</span>
                    <svg class="tw-w-5 tw-h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15" />
                    </svg>
                </button>
                <div class="tw-hidden tw-w-auto md:tw-block tw-md:w-auto" id="navbar-default">
                    <ul class="!tw-bg-gray-100 tw-font-medium tw-flex tw-flex-col tw-p-4 md:tw-p-0 tw-mt-4 tw-border tw-border-gray-100 tw-rounded-lg md:tw-flex-row md:tw-space-x-8 md:tw-mt-0 md:tw-border-0 md:tw-bg-white">
                        <li>
                            <a class="tw-block tw-py-2 tw-pl-3 tw-pr-4 tw-text-gray-900 tw-rounded hover:tw-bg-gray-100 md:hover:tw-bg-transparent md:tw-border-0 md:hover:tw-text-blue-700 md:tw-p-0" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li>
                            <a class="tw-block tw-py-2 tw-pl-3 tw-pr-4 tw-text-gray-900 tw-rounded hover:tw-bg-gray-100 md:hover:tw-bg-transparent md:tw-border-0 md:hover:tw-text-blue-700 md:tw-p-0" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <partial name="_LoginPartial.cshtml"></partial>
                    </ul>
                </div>                    
            </div>
        </nav>
        }
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Basic - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        let navExpanded = false;
        const btn = document.getElementById('test-btn');
        if (btn){
            const navbar = document.getElementById('navbar-default');
            btn.addEventListener('click', function () {
                if (navExpanded) {
                    navbar.classList.add('tw-hidden');
                    navExpanded = false;
                }
                else{
                    navbar.classList.remove('tw-hidden');
                    navExpanded = true;
                }
            
            });
        }
    </script>
</body>
</html>